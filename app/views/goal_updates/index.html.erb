<h1>Listing updates for <%= @goal.goal %></h1>

<table>
  <thead>
    <tr>
      <th>Updated on:</th>
      <th>Entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal_updates.each do |goal_update| %>
      <tr>
        <td><%= link_to goal_update.updated_at.to_date, [@goal, goal_update]  %></td>
        <td><%= goal_update.entry %></td>
        <td><%# link_to 'Edit', [:edit, @goal, goal_update] %></td>
        <td><%# link_to 'Destroy', [@goal, goal_update], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal Update', new_goal_goal_update_path(goal_id: @goal.id) %> | 
<%= link_to "Mark Complete" %>
