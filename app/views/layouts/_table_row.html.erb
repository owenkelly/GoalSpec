
    <% @goals.each do |goal| %>
    <tr>
    <% if goal.subgoal_ids == params[:expand_subgoals] %>
   	<td></td>
      <td>Goal</td>
      <td>Due Date</td>
    </tr>
      <tr>
      	<td></td>
        <td><%= link_to goal.goal, goal %></td>
        <td><%= goal.end %></td>
        <td><%= link_to "View SubGoals", goals_path(expand_subgoal: goal.id) %>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
 