<h1>Listing goals</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Reason</th>
      <th>Start</th>
      <th>End</th>
      <th>Recurrance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.where(metagoal_id: nil).each do |goal| %>
      <tr>
        <td><%= goal.goal %></td>
        <td><%= goal.reason %></td>
        <td><%= goal.start %></td>
        <td><%= goal.end %></td>
        <td><%= goal.recurrance %></td>
        <td><%= link_to "Create SubGoal", new_goal_path(metagoal_id: goal.id) %>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

